---
// AuthorProfile.astro
const { imageUrl, authorName, factCheckerName, jobTitle } = Astro.props;
---

<div class="my-8 flex items-center justify-center space-x-4">
  <img src={imageUrl} alt={`${authorName}'s profile picture`} class="w-16 h-16 rounded-full" />
  <div>
    <h3 class="text-sm font-semibold">Researched by {authorName}</h3>
    <p class="text-sm text-gray-600">{jobTitle}</p>
    <h3 class="text-sm font-semibold">Fact checked by {factCheckerName}</h3>
  </div>
</div>
